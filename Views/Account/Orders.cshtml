
@{
    ViewBag.Title = "Orders";
}

<h2>@User.Identity.Name</h2>

<br />


<div class="container">
    <h2>Orders</h2>
    <table class="table table-hover" id="myTable">
        <thead id="tableHead">
            <tr>
                <th>GUID</th>
                <th>Number</th>
                <th>Manager</th>
                <th>Created_date</th>
                <th>Delivery_date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody id="myTableBody">
            
        </tbody>
    </table>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" id="createModal">Create new</button>    
    <div id="footer">        
    </div>
    <div id="filter1" class="form-group">
        <p><input type="text" class="form-control" placeholder="Filter by Number" /></p>
    </div>     
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">EDIT</h4>
            </div>
            <form class="form-horizontal" id="frm1">                
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">GUID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="orderGuid" />                          
                        </div>                        
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="orderNumber" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Manager</label>
                        <div class="col-sm-10">
                            <!--<input type="text" class="form-control" id="orderManager" />-->
                            <select class="form-control" id="managerSelect">

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Delivery date</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control datepicker" id="orderDelivery" />                                                      
                        </div>                                               
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="orderDescription"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="~/Scripts/orders-page.js"></script>  
